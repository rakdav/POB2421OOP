<Window x:Class="Lesson43._3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson43._3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="680">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="image.jpg" Grid.Column="1" Stretch="Fill" />
        <StackPanel Orientation="Vertical" Grid.Column="0" Background="Gray">
            <Button Content="Главное меню" Margin="5 10" Background="Black" Foreground="White"/>
            <Button Content="Не главное меню" Margin="5 10" Background="LightGreen" Foreground="Black"/>
            <Button Content="Вообще не меню" Margin="5 10" Background="Black" Foreground="White"/>
            <Button Content="Левая кнопка" Margin="5 10" Background="LightGreen" Foreground="Black"/>
            <Button Content="Мнопка с оибкой в слове" Margin="5 10" Background="Black" Foreground="White"/>
            <Button Content="Левая кнопка" Margin="5 160 5 0" Background="Yellow" Foreground="Black"/>
            <Button Content="Левая кнопка" Margin="5 20" Background="Yellow" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
