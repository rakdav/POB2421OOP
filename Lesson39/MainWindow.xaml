<Window x:Class="Lesson39.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Lesson39"
        mc:Ignorable="d"
        Title="Мое первое приложение" Height="350" Width="250" 
        Background="Aqua">
    <Canvas>
        <Button Content="Нажми меня" Width="120" Height="35" Canvas.Left="65" Canvas.Top="152" Click="Button_Click" />
        <TextBox x:Name="FirstText" Canvas.Left="15" TextWrapping="Wrap" 
                 Canvas.Top="43" Width="220" HorizontalAlignment="Center" 
                 VerticalAlignment="Top" materialDesign:HintAssist.Hint="От"/>
        <TextBox x:Name="SecondText" Canvas.Left="15" TextWrapping="Wrap" materialDesign:HintAssist.Hint="До"
                 Canvas.Top="92" Width="220" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label x:Name="Result" Canvas.Left="70" Canvas.Top="200" Width="100"
               FontSize="16"/>

    </Canvas>
</Window>
