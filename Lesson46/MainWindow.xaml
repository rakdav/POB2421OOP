<Window x:Class="Lesson46.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson46"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Window.Resources>
        <!--Определяем кисть радиального градиента-->
        <RadialGradientBrush x:Key="EllipseGradient">
            <GradientStop Color="Yellow" Offset="0.1"/>
            <GradientStop Color="Red" Offset="0.5"/>
            <GradientStop Color="Green" Offset="1.0"/>
        </RadialGradientBrush>
    </Window.Resources>
    <StackPanel Margin="10">
        <Ellipse Width="150" Height="150" Fill="{DynamicResource EllipseGradient}"/>
        <Button Content="Сменить цвет круга" Width="170" Height="30" FontSize="16" Margin="10" Click="Button_Click"/>
    </StackPanel>
</Window>
