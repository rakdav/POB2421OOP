<Window x:Class="Lesson43._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson43._1"
        mc:Ignorable="d"
        Title="Задание 2" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Source="cat.jpg" Grid.Column="0" Grid.Row="0"/>
            <Rectangle Grid.Row="0" Grid.Column="1" Fill="Green"/>
            <Rectangle Grid.Row="0" Grid.Column="2" Fill="White"/>
            <Rectangle Grid.Row="1" Grid.Column="0" Fill="Green"/>
            <Rectangle Grid.Row="1" Grid.Column="1" Fill="CadetBlue"/>
            <Rectangle Grid.Row="1" Grid.Column="2" Fill="Green"/>
            <Rectangle Grid.Row="2" Grid.Column="0" Fill="White"/>
            <Rectangle Grid.Row="2" Grid.Column="1" Fill="Green"/>
            <Rectangle Grid.Row="2" Grid.Column="2" Fill="White"/>
        </Grid>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="LightYellow">
            <Button Margin="20" Content="A я че? Я просто кнопка с отступами 50 по краям"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0" Background="LightBlue">
            <Rectangle Margin="50 100" Fill="Violet"/>
        </Grid>
    </Grid>
</Window>
