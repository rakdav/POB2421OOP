    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="NameTextBox" materialDesign:HintAssist.Hint="Имя"
                 Grid.Row="0" Grid.Column="1" Margin="10 20"/>
        <TextBox x:Name="SurnameTextBox" materialDesign:HintAssist.Hint="Отчество"
                Grid.Row="1" Grid.Column="1" Margin="10 20"/>
        <TextBox
                  materialDesign:HintAssist.Hint="Возраст"
                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                  Grid.Row="2" Grid.Column="1" Margin="10 20"/>
        <Grid Grid.Row="3" Grid.Column="1" Margin="10 15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <DatePicker materialDesign:HintAssist.Hint="Дата" Grid.Column="0"
                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
            <materialDesign:TimePicker Is24Hours="True" x:Name="PresetTimePicker" Grid.Column="1"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="1" Margin="10 15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <PasswordBox x:Name="FloatingPasswordBox" Grid.Column="0"
                         materialDesign:HintAssist.Hint="Пароль"
                         materialDesign:HintAssist.Foreground="Green"
                         materialDesign:TextFieldAssist.UnderlineBrush="Green"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
            <Button Style="{StaticResource MaterialDesignRaisedLightButton}"
                ToolTip="Resource name: MaterialDesignRaisedLightButton" Grid.Column="1" 
                    Margin="5 0">
               Генерировать
            </Button>
        </Grid>
        <Button 
                ToolTip="Кнопка регистрации" Grid.Row="6" Grid.Column="1"
                Margin="100 0 0 0" FontFamily="Times New Roman" FontSize="20"
            FontWeight="Bold">
            Зарегистрироваться
        </Button>
    </Grid>
</Window>
