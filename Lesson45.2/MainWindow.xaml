<Window x:Class="Lesson45._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson45._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Window.Resources>
    <Style TargetType="Button" x:Key="Base">
        <Setter Property="Content" Value="Кнопка"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Background" Value="LightGray"/>
    </Style>
    <Style TargetType="Button" x:Key="SecondButton" BasedOn="{StaticResource Base}">
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style TargetType="Button" x:Key="ThirdButton" BasedOn="{StaticResource Base}">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style TargetType="TextBox" x:Key="TextBoxStyel">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Text" Value="Текстовое поле"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Style="{StaticResource Base}"/>
            <Button Style="{StaticResource Base}"/>
            <Button Style="{StaticResource Base}"/>
            <Button Style="{StaticResource Base}"/>
            <Button Style="{StaticResource Base}"/>
            <Button Style="{StaticResource SecondButton}"/>
            <Button Style="{StaticResource SecondButton}"/>
            <Button Style="{StaticResource SecondButton}"/>
            <Button Style="{StaticResource SecondButton}"/>
            <Button Style="{StaticResource SecondButton}"/>
            <Button Style="{StaticResource ThirdButton}">
                <Button.Effect>
                    <DropShadowEffect Color="DarkRed" Direction="320" ShadowDepth="10" Opacity="0.5"
                        BlurRadius="10"/>
                </Button.Effect>
            </Button>
            <Button Style="{StaticResource ThirdButton}">
                <Button.Effect>
                    <DropShadowEffect Color="DarkRed" Direction="320" ShadowDepth="10" Opacity="0.5"
            BlurRadius="10"/>
                </Button.Effect>
            </Button>
            <Button Style="{StaticResource ThirdButton}">
                <Button.Effect>
                    <DropShadowEffect Color="DarkRed" Direction="320" ShadowDepth="10" Opacity="0.5"
            BlurRadius="10"/>
                </Button.Effect>
            </Button>
            <Button Style="{StaticResource ThirdButton}">
                <Button.Effect>
                    <DropShadowEffect Color="DarkRed" Direction="320" ShadowDepth="10" Opacity="0.5"
            BlurRadius="10"/>
                </Button.Effect>
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox Style="{StaticResource TextBoxStyel}"/>
        </StackPanel>
    </Grid>
</Window>
