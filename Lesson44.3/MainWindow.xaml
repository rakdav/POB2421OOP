<Window x:Class="Lesson44._3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson44._3"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="800">
    <!--<Canvas>
        <Button Canvas.Left="50" Canvas.Top="50" Width="150" Height="25" >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#fcc8c2" BorderBrush="Red"
